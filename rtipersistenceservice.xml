<?xml version="1.0"?>
<dds>
  <persistence_service name="ChatPS">
    <persistent_storage>
      <storage_plugin>builtin.SQLite</storage_plugin>
      <database_name>ps_storage/chat.sqlite</database_name>
      <create_if_missing>true</create_if_missing>
    </persistent_storage>

    <!-- Persist all persistent topics -->
    <domain_route>
      <input>
        <transports>builtin.udpv4</transports>
      </input>
      <output>
        <transports>builtin.udpv4</transports>
      </output>
    </domain_route>
  </persistence_service>
</dds>
